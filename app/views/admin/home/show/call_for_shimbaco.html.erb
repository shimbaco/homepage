<%= render Admin::NavbarComponent.new %>

<div class="container py-3">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">slug</th>
        <th scope="col">title</th>
        <th scope="col">published_at</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.slug %></td>
          <td><%= post.title %></td>
          <td><%= display_time(post.published_at) %></td>
          <td><%= link_to "Edit", admin_edit_post_path(post.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
