.post
  .header
    margin: 10px 10px 0 0
    text-align: right

  .container
    padding: 80px 15px 0 15px

    h1
      font-size: 40px
      text-align: center

      &:after
        separator()

    h2
      margin-top: 40px

    p
      line-height: 1.8
      margin-bottom: 30px;

    ul
      margin-bottom: 30px;

      > li
        margin: 5px 0

        > ul
          margin-bottom: 20px;

    hr.profile-separator
      border: 0
      border-top: 1px solid rgba(0, 0, 0, 0.05)
      margin: 30px 0

    .footer
      height: 40px
      line-height: 40px
      margin-bottom: 40px
      text-align: center

      a
        border: 1px solid rgba(0, 0, 0, 0.08)
        color: rgba(0, 0, 0, 0.3)
        padding: 10px
        transition: color 0.2s, border 0.2s
        transition-timing-function: ease-in-out

        &:hover
          border: 1px solid rgba(0, 0, 0, 0.3)
          color: rgba(0, 0, 0, 0.5);
          text-decoration: none

        i
          margin-right: 10px
